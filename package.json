{
  "name": "react-module-boilerplate",
  "version": "0.1.0",
  "description": "Sample React components testing environment.",
  "author": {
    "name": "Pascal Duez",
    "url": "https://github.com/pascalduez"
  },
  "homepage": "https://github.com/pascalduez/react-module-boilerplate",
  "bugs": "https://github.com/pascalduez/react-module-boilerplate/issues",
  "repository": {
    "type": "git",
    "url": "git://github.com/pascalduez/react-module-boilerplate.git"
  },
  "license": "Unlicense",
  "files": [
    "dist",
    "index.js",
    "README.md",
    "UNLICENSE"
  ],
  "scripts": {
    "lint:css": "stylelint ./src/**/*.css",
    "lint:js": "eslint ./src/**/*.js",
    "lint": "npm run lint:js && npm run lint:css",
    "typecheck": "flow check",
    "validate": "npm run typecheck && npm run lint",
    "test": "BABEL_ENV=RELEASE jest",
    "test:ci": "NODE_ENV=CI npm test -- --coverage",
    "storybook": "start-storybook --dont-track -p 9001 -c .storybook",
    "test:stories": "BABEL_ENV=RELEASE storyshots -x '\\[doc\\]'",
    "clean": "rm -rf ./dist",
    "build:js": "BABEL_ENV=RELEASE babel ./src -d ./dist --ignore '*.test.js,*.type.js,*.story.js'",
    "build": "npm run clean && npm run build:js",
    "prepublish": "npm run build"
  },
  "jest": {
    "testPathDirs": [
      "src"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js",
      "!src/**/*.story.js",
      "!src/**/*.type.js"
    ],
    "setupTestFrameworkScriptFile": "scripts/setupTests.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/storybook": "^2.30.1",
    "@kadira/storybook-addon-knobs": "^1.6.0",
    "@kadira/storyshots": "^2.1.0",
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-css-modules-transform": "^1.1.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "ci-info": "^1.0.0",
    "classnames": "^2.2.5",
    "enzyme": "^2.6.0",
    "enzyme-to-json": "^1.3.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-flowtype": "^2.25.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "flow-bin": "^0.35.0",
    "jasmine-reporters": "^2.2.0",
    "jest-cli": "^17.0.3",
    "jest-enzyme": "^2.0.0",
    "react": "^15.4.0",
    "react-addons-test-utils": "^15.4.0",
    "react-dom": "^15.4.0",
    "stylelint": "^7.4.2",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^14.0.0"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  }
}
