{
  "name": "react-module-boilerplate",
  "version": "0.1.0",
  "description": "Sample React components testing environment.",
  "author": {
    "name": "Pascal Duez",
    "url": "https://github.com/pascalduez"
  },
  "homepage": "https://github.com/pascalduez/react-module-boilerplate",
  "bugs": "https://github.com/pascalduez/react-module-boilerplate/issues",
  "repository": {
    "type": "git",
    "url": "git://github.com/pascalduez/react-module-boilerplate.git"
  },
  "license": "Unlicense",
  "files": [
    "dist",
    "index.js",
    "README.md",
    "UNLICENSE"
  ],
  "scripts": {
    "lint:css": "stylelint ./src/**/*.css",
    "lint:js": "eslint ./src/**/*.js",
    "lint": "npm run lint:js && npm run lint:css",
    "typecheck": "flow check ./src",
    "validate": "npm run lint && npm run typecheck",
    "test": "BABEL_ENV=RELEASE jest",
    "test:ci": "NODE_ENV=CI npm test -- --runInBand --coverage",
    "storybook": "start-storybook --dont-track -p 9001 -c .storybook",
    "clean": "rm -rf ./dist",
    "build:js": "BABEL_ENV=RELEASE babel ./src -d ./dist --ignore '*.test.js,*.story.js'",
    "build:flow": "flow-copy-source -v -i '**/*.test.js' -i '**/*.story.js' ./src ./dist",
    "build": "npm run clean && npm run build:js && npm run build:flow",
    "prepublish": "npm run build"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js",
      "!src/**/*.story.js"
    ],
    "setupTestFrameworkScriptFile": "./scripts/setupTests.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/storybook": "^2.35.2",
    "@kadira/storybook-addon-knobs": "^1.7.1",
    "autoprefixer": "^6.7.5",
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-css-modules-transform": "^1.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.1.10",
    "babel-preset-react": "^6.23.0",
    "ci-info": "^1.0.0",
    "classnames": "^2.2.5",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-css-modules": "^2.4.1",
    "eslint-plugin-flowtype": "^2.29.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "flow-bin": "^0.40.0",
    "flow-copy-source": "^1.1.0",
    "jasmine-reporters": "^2.2.0",
    "jest": "^19.0.2",
    "jest-enzyme": "^2.1.2",
    "postcss-custom-properties": "^5.0.2",
    "postcss-loader": "^1.3.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "stylelint": "^7.9.0",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^16.0.0"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  }
}
