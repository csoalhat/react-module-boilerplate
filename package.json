{
  "name": "react-module-boilerplate",
  "version": "0.1.0",
  "description": "Sample React components testing environment.",
  "author": {
    "name": "Pascal Duez",
    "url": "https://github.com/pascalduez"
  },
  "homepage": "https://github.com/pascalduez/react-module-boilerplate",
  "bugs": "https://github.com/pascalduez/react-module-boilerplate/issues",
  "repository": {
    "type": "git",
    "url": "git://github.com/pascalduez/react-module-boilerplate.git"
  },
  "license": "Unlicense",
  "files": [
    "dist",
    "index.js",
    "README.md",
    "UNLICENSE"
  ],
  "scripts": {
    "lint:css": "stylelint ./src/**/*.css",
    "lint:js": "eslint ./src/**/*.js",
    "lint": "npm run lint:js && npm run lint:css",
    "flow": "flow check",
    "validate": "npm run flow && npm run lint",
    "test": "BABEL_ENV=RELEASE jest",
    "watch:test": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage",
    "storybook": "start-storybook --dont-track -p 9001 -c .storybook",
    "test:stories": "BABEL_ENV=RELEASE storyshots",
    "clean": "rm -rf ./dist",
    "build:js": "BABEL_ENV=RELEASE babel ./src -d ./dist --ignore '*.test.js,*.type.js,*.stories.js'",
    "build": "npm run clean && npm run build:js",
    "prepublish": "npm run build"
  },
  "jest": {
    "testPathDirs": ["src"],
    "collectCoverageFrom": ["src/**/*.js", "!src/**/*.story.js", "!src/**/*.type.js"],
    "setupTestFrameworkScriptFile": "node_modules/jasmine-enzyme/lib/jest.js"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.18.1",
    "@kadira/storybook-addon-knobs": "^1.2.2",
    "@kadira/storyshots": "^1.0.5",
    "autoprefixer": "^6.4.1",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-css-modules-transform": "^1.1.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.1.18",
    "enzyme": "^2.4.1",
    "enzyme-to-json": "^1.1.1",
    "eslint": "^3.6.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-flowtype": "^2.19.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "flow-bin": "^0.32.0",
    "jasmine-enzyme": "^1.2.0",
    "jest-cli": "^15.1.1",
    "react-addons-test-utils": "^15.3.2",
    "stylelint": "^7.3.1",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^13.0.2"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2"
  }
}
